{
  "name": "manga-shosai",
  "version": "0.0.1",
  "description": "A Manga Reader Web App",
  "main": "server/app/index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint ./server/*",
    "lintFix": "eslint ./server/* --fix",
    "prettier:fix": "prettier --write '**/@(*.js|*.json)'",
    "start:api": "nodemon ./server/app/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martinc-dev/manga-shosai.git"
  },
  "author": "Martin Cheng",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/martinc-dev/manga-shosai/issues"
  },
  "homepage": "https://github.com/martinc-dev/manga-shosai#readme",
  "dependencies": {
    "axios": "=0.19.2",
    "chalk": "=4.1.0",
    "cors": "=2.8.5",
    "express": "=4.17.1",
    "sequelize": "^6.3.3",
    "sqlite3": "^5.0.0",
    "uuid": "=8.2.0"
  },
  "devDependencies": {
    "eslint": "=7.4.0",
    "eslint-plugin-jest": "=23.17.1",
    "husky": "=4.2.5",
    "jest": "=26.1.0",
    "nodemon": "=2.0.4",
    "prettier": "=2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run prettier:fix && npm run lint && npm run test"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "app/(.*)": "<rootDir>/server/app/$1"
    }
  }
}
